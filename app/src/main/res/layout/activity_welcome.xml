<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".WelcomeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/bg3x" />

    <ImageView
        android:id="@+id/main_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:background="@drawable/circle_white_bg"
        android:src="@drawable/just_logo" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/create_acc_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/main_logo"
        android:layout_marginStart="36dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/sf_pro_regular"
        android:text="Sign Up with Email"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="normal"
        app:backgroundTint="#DFFFFFFF"
        app:cornerRadius="5dp"
        android:textAlignment="textStart"
        app:iconPadding="16dp"
        app:icon="@drawable/ic_email"
        app:iconSize="25dp"
        app:rippleColor="@color/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/facebook_login_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/create_acc_button"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        android:fontFamily="@font/sf_pro_regular"
        android:text="Login with Facebook"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        android:textStyle="normal"
        app:backgroundTint="#DFFFFFFF"
        app:cornerRadius="5dp"
        app:icon="@drawable/ic_facebook"
        app:iconSize="25dp"
        android:textAlignment="textStart"
        app:iconPadding="16dp"
        app:rippleColor="@color/colorPrimary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/gmail_login_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_below="@+id/facebook_login_button"
        android:layout_marginStart="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="36dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp"
        android:fontFamily="@font/sf_pro_regular"
        android:text="Login with Gmail"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal"
        app:backgroundTint="#DFFFFFFF"
        app:cornerRadius="5dp"
        android:textAlignment="textStart"
        app:iconPadding="16dp"
        app:icon="@drawable/ic_gmail"
        app:iconSize="25dp"
        app:rippleColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@+id/gmail_login_button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:text="Already have an Account ? "
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:text=" Login"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:id="@+id/welcome_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal" />



</RelativeLayout>